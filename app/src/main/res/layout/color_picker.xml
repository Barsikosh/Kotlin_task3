                android:textColorHint="#651fff"
                android:onClick="onClick15"/>

            <Button
                android:id="@+id/color_button16"
                android:layout_width="@dimen/color_button_width"
                android:layout_height="@dimen/color_button_width"
                android:layout_margin="@dimen/large_margin"
                android:background="@drawable/color_button"
                android:textColorHint="#d500f9"
                android:onClick="onClick16"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_margin="@dimen/normal_margin">

            </Button>


        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="93dp"
        android:layout_height="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>